pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('my_dockerhub')
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the HTML code'
                // Add any additional build steps here if needed
            }
        }

        stage('Build docker image') {
            steps {
                script {
                    sh 'docker build -t mon_app_html .'
                }
            }
        }

        stage('Login') {
            steps {
                script {
                    // Use double quotes to interpolate variables
                    sh "echo \${DOCKERHUB_CREDENTIALS_PSW} | docker login -u \${DOCKERHUB_CREDENTIALS_USR} --password-stdin"
                }
            }
        }

        stage('Push image to hub') {
            steps {
                script {
                    sh 'docker push mon_app_html'
                }
            }
        }

        stage('Logout') {
            steps {
                script {
                    sh 'docker logout'
                }
            }
        }
    }
}
